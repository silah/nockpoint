# Flask Configuration
SECRET_KEY=your-secret-key-here

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
# For development (SQLite):
DATABASE_URL=sqlite:///nockpoint.db

# For production (PostgreSQL):
# DATABASE_URL=postgresql://username:password@localhost:5432/nockpoint_db

# For production (MySQL/MariaDB):
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/nockpoint_db

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=1

# Python Path (for Docker deployment)
PYTHONPATH=/app

# Optional: Custom port
# PORT=5000

# Production Example:
# FLASK_ENV=production
# FLASK_DEBUG=False
# DATABASE_URL=postgresql://username:password@your-postgres-host:5432/nockpoint_db
# SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production
# JWT_SECRET_KEY=your-jwt-secret-key-here-also-change-this